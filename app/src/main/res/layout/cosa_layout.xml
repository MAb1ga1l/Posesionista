<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/label_nombreCosa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/labelNombre" />

    <TextView
        android:id="@+id/label_precioCosa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_nombreCosa"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:text="@string/labelPrecio"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/label_numSerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_nombreCosa"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="@string/labelSerie"
        android:textSize="12sp" />

</RelativeLayout>